<div class="panel panel-default col-xs-12">
  <div class="panel-body">
    <div class="form-horizontal">
      <%= form_for(@post) do |f| %>
        <% if @post.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

            <ul>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <label for="title" class="col-sm-3 control-label">Titulo:</label>
          <div class="col-sm-5">
              <%= f.text_field :title, :placeholder => 'Digite o título', class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label for="description" class="control-label col-sm-3">Descrição:</label>
          <div class="col-sm-5">
              <%= f.text_field :description, :placeholder => 'Digite a descrição', class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-4 col-sm-offset-4">
            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Salvar</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
