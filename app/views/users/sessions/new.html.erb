<%= render 'publics/navbar' %>
<div class="page-container">
  <div class="content">
    <div class="container">
      <div class="panel panel-default col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 panel-margin">
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group input-group">
              <label for="email" class="input-group-addon"><i class="fa fa-envelope"></i></label>
              <%= f.email_field :email, autofocus: true, :placeholder => 'Email', class: 'form-control' %>
            </div>
            <div class="form-group input-group">
              <label for="password" class="input-group-addon"><i class="fa fa-lock"></i></label>
              <%= f.password_field :password, autocomplete: "off", :placeholder => 'Senha', class: 'form-control' %>
            </div>
            <%= f.check_box :remember_me %>
            <label>Lembrar-me</label>
            <div class="form-group">
              <button type="submit" class="btn btn-block btn-primary">Entrar</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= render 'publics/footer' %>
</div>
